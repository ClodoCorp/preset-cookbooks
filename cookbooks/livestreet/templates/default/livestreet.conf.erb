<VirtualHost *:80>
  ServerName <%= @server_name %>
  ServerAlias <% @server_aliases.each do |a| %><%= a %> <% end %>
  DocumentRoot <%= @docroot %>

  <Directory <%= @docroot %>>
    Options FollowSymLinks
    AllowOverride All
    Order allow,deny
    Allow from all
  </Directory>

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

</VirtualHost>
